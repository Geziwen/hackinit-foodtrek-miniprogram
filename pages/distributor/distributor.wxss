page {
  height: 100%
}

.teacher-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 80%;
}

.scroll-view{
  padding: 0px;
  margin: 0px;
}

.weui-navbar{
  font-size: 17px;
  padding-bottom: 15px;
  top: 20px;
  width: 100%;
  text-align: center;
  position: relative;
  border-bottom: 1px solid #00bba1;
  white-space: nowrap; 
  z-index: 100;
  background: white;
}

 .rec{
  width: 100%;
  height: 3%;
} 

.default-item{
  /*width:25%;*/
  display: inline-block;
  box-sizing: border-box;
  height: 7%;
}

.weui-navbar .item_on{
  color: #00bba1;
}

.weui-navbar-slider{
  position: absolute;
  width: 160rpx;
  height: 2px;
  content: "";
  background: #00bba1;
  transition: transform .3s;
}

.swiper-box{
  height: 900px;
  border-bottom: 1px solid #d1d1d1;
}

.swiper-item{
  height: 100%;
}

.bg-purple {
  background-color: whitesmoke;
  line-height: 100rpx;
}

.bg-white {
  background-color: white;
  line-height: 100rpx;
}

.distributor-button {
  float: right;
  bottom: 30rpx;
  right: 40rpx;
}

.distributor-text {
  margin-left: 20px;
  font-size: 14px;
}